def pred_and_eve(model, test_list):
    
    y_pred_list = []

    for test in test_list:
            y_pred = model.predict(test)
            y_pred_list.append(np.mean(y_pred))

    return y_pred_list

def minmaxscaling_sequences(df, df_test, engines_range = 25):
     df = df.bfill()
     # print(np.array(df.groupby('unit number')['time'].max().tolist()))
     scaler = MinMaxScaler(feature_range=(0,1))
     features = df.columns.tolist()
     features.remove('unit number')
     features.remove('time')
     scaled_data = scaler.fit_transform(df[features])
     scaled_df_fake = pd.DataFrame(scaled_data)
     scaled_df = pd.concat([df['unit number'], df['time'],  scaled_df_fake], axis=1)
     scaled_df.columns = df.columns
     # print(scaled_df)
     # print(scaled_df.columns)
     # print(scaled_df['unit number'])
           
     def create_sequences(data, engines_num):
          global timesteps_num
          xs, ys = [], []
          
          for i in range(engines_num):
               filt = data['unit number'] == i
               data_filt = data[filt]
               # print(data_filt)
               x = data_filt
               y = data_filt['time'].max()
               xs.append(x)
               ys.append(y)
          # print(xs)
          # print(ys)   
          df_group = np.array(df_test.groupby('unit number')['time'].max().tolist())
          print(df_group)
          timesteps_num  = df_group.min()
          xs = pad_sequences(xs, maxlen = df_group.min(), padding = 'post', truncating ='post')   
          return np.array(xs), np.array(ys)     

     return create_sequences(scaled_df, engines_range)

